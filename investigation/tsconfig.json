{
  "compilerOptions": {
    // Base Options
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Not transpiling with TypeScript (using tsx)
    "module": "preserve",
    "noEmit": true,

    // Not running in DOM
    "lib": ["es2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
